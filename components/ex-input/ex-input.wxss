/* components/ex-input/ex-input.wxss */
.ex-input-wrapper {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.ex-input-label {
  height: 100%;
  width: 200rpx;
  text-align: right;
  font-size: 32rpx;
  font-weight: 1000;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-right: 24rpx;
}
.ex-input-content {
  height: inherit;
  flex-grow: 1;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.22);
  position: relative;
}

.ex-content {
  height: inherit;
}
.ex-input {
  height: 100%;
  padding: 14rpx 20rpx 14rpx 20rpx;
  box-sizing: border-box;
}

.ex-picker {
  height: inherit;
  padding: 14rpx 20rpx 14rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
}
.ex-picker-input {
  min-height: 100%;
  min-width: 100%;
  height: 100%;
  width: 100%;
}
.center {
  text-align: center;
}
.ex-icon {
  position: absolute;
  top: 0;
  right: 0;
  width: 32rpx;
  height: inherit;
  display: flex;
  justify-content: center;
  align-items: center;
}
.icon {
  width: 32rpx;
  height: 32rpx;
}
