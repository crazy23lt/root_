/* components/er-input/er-input.wxss */
.picker {
  width: 100%;
  height: 100%;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.22);
  position: relative;
}
.icon-wrapper {
  width: 10rpx;
  height: 5rpx;
  position: absolute;
  top: 50%;
  right: 0rpx;
  transform: translateY(-50%);
}
.icon-wrapper image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.ipt {
  height: 100%;
}
